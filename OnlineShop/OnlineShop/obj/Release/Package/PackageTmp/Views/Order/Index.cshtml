@model IEnumerable<OnlineShop.Models.OrderViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="card-body">
    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group" style="margin-bottom:10px">
            <input type="text" class="form-control" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total price</th>
                    <th>Order date</th>
                    <th>Payment type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.orders.OrderId</td>
                        <td>@item.customers.Cid</td>
                        <td>@item.customers.Name</td>
                        <td>@item.products.ProductName</td>
                        <td>@item.orDetail.Quantity</td>
                        <td>@item.orDetail.Price</td>
                        <td>@item.orders.OrderDate</td>
                        <td>@item.orders.PaymentType</td>
                        <td>@item.orders.Status</td>


                        <td style="width:400px">

                            

                            <a style="display:inline" class="nav-link" href="@Url.Action("Edit", "Product", new { id = item.orders.OrderId } )">
                                <i class="fas fa-edit"></i>
                                <span>Edit</span>
                            </a>
                            <a style="display:inline" class="nav-link" href="@Url.Action("Delete", "Product", new { id = item.orders.OrderId })">
                                <i class="fa fa-trash"></i>
                                <span>Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
