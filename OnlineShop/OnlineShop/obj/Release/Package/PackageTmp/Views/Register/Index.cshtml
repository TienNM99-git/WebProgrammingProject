@model OnlineShop.DBModels.UserViewModel

@{
    Layout = null;
}





<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/Assets/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-dark">

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Register an Account</div>


            <div class="card-body">
                <form id="registerForm">
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Username, "", new { @id = "Username", @class = "form-control", @placeholder = "Username" })
                            <label for="Username">User name</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.FullName, "", new { @id = "Name", @class = "form-control", @placeholder = "Full name" })

                            <label for="Name">Full name</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Phone, "", new { @id = "Phone", @class = "form-control", @placeholder = "Your phonenubmer" })
                            <label for="Phone">Phone number </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.Address, "", new { @id = "address", @class = "form-control", @placeholder = "Your address" })
                            <label for="address">Address </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.PasswordFor(model => model.Password, new { @id = "pwd", @class = "form-control", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <label for="pwd">Password</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "cpwd", @class = "form-control", @placeholder = "Confirm password" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    <label for="cpwd">Confirm password</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="#" class="btn btn-primary btn-block" onclick="Register()">Submit</a>
                </form>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="login.html">Login Page</a>
                    </div>
                
                </div>
                
            </div>
        </div>

    <script>
        var Register = function () {
            debugger
            var data = $("#registerForm").serialize();


            $.ajax({
                url: "/Register/Register",
                type: "POST",
                data: data,
                success: function (res) {
                    debugger
                    if(res.Result === true)
                    {
                        alert("Success");
                        window.location.href = "/Login/Login";
                    }
                    else {
                        if(res.Exist === true)
                        {
                            alert("This account has already existed !!!");
                        }
                        else if(res.Confirm === false)
                        {
                            alert("Password and ConfirmPassword do not match !!!");
                        }
                    }
                    
                }


            })
        }
    </script>

        <!-- Bootstrap core JavaScript-->
        <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/Assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="~/Assets/vendor/jquery-easing/jquery.easing.min.js"></script>
        @Scripts.Render("~/bundles/jqueryval")
    </body>














