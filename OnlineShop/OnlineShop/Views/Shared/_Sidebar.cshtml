@using OnlineShop.DBModels

@{ 
    DbModels db = new DbModels();
    ViewBag.Categories = db.Categories;
}


<!-- Sidebar -->
<ul class="sidebar navbar-nav">
    <li class="nav-item active">
        <a class="nav-link" href="/">
            <i class="fas fa-home"></i>
            <span>HomePage</span>
        </a>
    </li>

    @if (Session["AdminID"] != null)
    {
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Category")">
                <i class="far fa-list-alt"></i>
                <span>Category</span>
            </a>
        </li>

        <li class="nav-item">
            @if (ViewBag.Categories != null)
            {
                foreach (Category cate in (IEnumerable<Category>)ViewBag.Categories)
                {
                    <a class="nav-link" href="/categories/@cate.CategoryID/@cate.CategoryName">
                        <i></i>
                        <span>@cate.CategoryName</span>
                    </a>
                }
            }
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Product")">
                <i class="fa fa-briefcase"></i>
                <span>Product</span>
            </a>
        </li>

        

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Supplier")">
                <i class="fas fa-copyright"></i>
                <span>Supplier</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Customer")">
                <i class="fa fa-user-circle"></i>
                <span>User</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Cart")">
                <i class="fas fa-shopping-cart"></i>
                <span>Cart</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Order")">
                <i class="fas fa-atlas"></i>
                <span>Order</span>
            </a>
        </li>
    }
    @if (Session["UserID"] != null)
    {
        <li class="nav-item">
            @if (ViewBag.Categories != null)
            {
                foreach (Category cate in (IEnumerable<Category>)ViewBag.Categories)
                {
                    <a class="nav-link" href="/categories/@cate.CategoryID/@cate.CategoryName">
                        <i></i>
                        <span>@cate.CategoryName</span>
                    </a>
                }
            }
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Cart")">
                <i class="fas fa-shopping-cart"></i>
                <span>Cart</span>
            </a>
        </li>
    }



</ul>

